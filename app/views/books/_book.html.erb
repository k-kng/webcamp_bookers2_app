<h2 class="mt-3">New book</h2>
<%= form_with model:book, local:true do |f| %>

 <div class=form-group>
  <div class="book_title">Title</div>
  <%= f.text_field :title %>
 </div>

 <div class=form-group>
  <div class="book_opinion">Opinion</div>
  <%= f.text_area :body %>
 </div>

 <div class=form-group>
  <%= f.submit 'Create Book', class:"btn btn-success" %>
 </div>

<% end %>