<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
     <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <li class="navbar-brand">
          <%= link_to "Bookers", root_path, class:"text-white" %>
        </li>
        <% if user_signed_in? %>
         <!--<button class="navbar-toggler">-->
          <div class="collapse navbar-collapse">
           <ul class="navbar-nav ml-auto">
            <li>
             <%= link_to 'Homes', user_path(current_user.id), class:"fas fa-home nav-link text-white" %>
            </li>

            <li>
             <%= link_to 'Users', users_path, class:"fas fa-users nav-link text-white" %>
            </li>

            <li>
             <%= link_to 'Books', books_path, class:"fas fa-book-open nav-link text-white" %>
            </li>

            <li>
             <%= link_to "logout", destroy_user_session_path, method: :delete, class:"fas fa-sign-out-alt nav-link text-white"  %>
            </li>
           </ul>
          </div>
         <!--</button>-->

        <% else %>
         <div class="collapse navbar-collapse">
          <ul class="navbar-nav ml-auto">
           <li>
            <%= link_to "Homes", root_path, class:"fas fa-home nav-link text-white" %>
           </li>

           <li>
            <%= link_to "About", home_about_path, class:"fas fa-link nav-link text-white" %>
           </li>

           <li>
             <%= link_to "sign up", new_user_registration_path, class:"fas fa-user-plus nav-link text-white" %>
           </li>

           <li>
             <%= link_to "login", new_user_session_path, class:"fas fa-sign-in-alt nav-link text-white" %>
           </li>
          </ul>
         </div>
        <% end %>
      </div>
     </nav>
    </header>
    <main>
      <% if flash[:notice] %>
       <p><%= flash[:notice] %></p>
      <% end %>
      <p></p>
      <%= yield %>
    </main>

    <footer>
     <div class="container mt-5">
      <div class="row">
       <div class="mx-auto">
        <p>CopyRight Infratop.inc</p>
       </div>
      </div>
     </div>
    </footer>
  </body>
</html>
