<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user', user: @user %>
      <%= render 'books/book', book: @newbook %>
    </div>

    <div class="col-md-8 offset-md-1">
     <h2>Users</h2>
     <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
         <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
         <tr>
           <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50,fallback: "no_image.jpg", size:'50x50'%></td>
           <td><%= user.name %></td>
           <td><%= link_to "Show", "/users/#{user.id}" %></td>
         </tr>
        <% end %>
      </tbody>
     </table>
    </div>

  </div>

</div>
